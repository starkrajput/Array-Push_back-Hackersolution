import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        String s = scan.nextLine();
        scan.close();
        s=s.trim();
        if (s.trim().isEmpty()) {
            System.out.println(0);
        }
        else{
        String sp[] =s.split("['!?,._@ ]+");
        System.out.println(sp.length);
        for(String str:sp){
            System.out.println(str);
        }
        }
        
        
        
    }
}

